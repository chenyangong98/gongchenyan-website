@article{turvey2024climate,
  selected    = {true},
  title       = {Climate change and climate-linked finance},
  author      = {Turvey, Calum G.* and Mastrianni, Morgan Paige and Liu, Shuxin and Gong, Chenyan},
  year        = {2025},
  month       = jun,
  journal     = {Agricultural Finance Review},
  volume      = {85},
  number      = {2},
  pages       = {199--233},
  issn        = {0002-1466},
  doi         = {10.1108/AFR-11-2023-0147},
  url         = {https://doi.org/10.1108/AFR-11-2023-0147},
  urldate     = {2024-12-02},
  langid      = {english},
  abstract    = {<b>Purpose</b> - This paper investigates the relationship between climate finance and climate ergodicity. More specifically the paper examines how climate ergodicity as measured by a mean-reverting Ornstein–Uhlenbeck process affects the value of climate-linked bonds.<br><br><b>Design/methodology/approach</b> - Bond valuation is evaluated using Monte Carlo methods of the Ornstein–Uhlenbeck process. The paper describes climate risk in terms of the Hurst coefficient and derives a direct linkage between the Ornstein–Uhlenbeck process and the Hurst measure.<br><br><b>Findings</b> - We find that the ergodic property holds with Hurst coefficients between 0.025 and 0.01 which implies increases in climate standard deviation in the range of 25%–50%.<br><br><b>Practical implications</b> - The approach provides a means to stress-test the bond prices to uncover the probability distribution about the issue value of bonds. The methods can be used to price or stress-test bonds issued by firms in climate sensitive industries.},
  preview     = {Tem_var_US.png},
  description = {Investigates the relationship between climate finance and climate ergodicity, examining how mean-reverting climate processes affect the valuation of climate-linked bonds using Monte Carlo methods.},
  keywords    = {Climate finance, Climate ergodicity, Ornstein–Uhlenbeck process, Climate-linked bonds, Hurst coefficient}
}


@article{okello2026nudging,
  selected    = {true},
  title       = {Nudging the adoption of improved crop varieties: Evidence from a large randomized controlled trial in Uganda},
  author      = {Okello, Julius Juma* and Just, David Ryan and Verschoor, Arjan and Ojwang, Sylvester Okoth and Mutiso, Janet Mwende and Mulwa, Chalmers Kyalo and Gong, Chenyan and Namanda, Sam and Rajendran, Srinivasulu and Ssali, Reuben Tendo and Okim, Moses Bunsen and Campos, Hugo},
  year        = {2026},
  journal     = {<span class="font-serif italic">Accepted by</span> Food Security},
  volume      = {Forthcoming},
  pages       = {},
  publisher   = {Springer},
  doi         = {},
  urldate     = {2025-11-28},
  langid      = {english},
  abstract    = {To achieve agricultural transformation in developing countries in the face of challenges such as climate change, the use of improved crop varieties needs a jumpstart. Using a randomized controlled trial in Uganda, we test how nudge theory can be harnessed to deliver increased adoption of improved crop varieties. We find a 7% treatment effect, though the effect is not robust to alternative specifications. We find compelling evidence for heterogeneous treatment effects, with robust treatment effects among those who experienced a stronger emotional connection to the nudges that we deployed. A key concept to help explain this is nostalgia: farmers prone to nostalgia responded more strongly to the traditional farming imagery used to nudge the adoption of improved varieties.},
  preview     = {study_area.png},
  description = {A randomized controlled trial in Uganda testing how nudge theory, specifically nostalgia and loss aversion, can increase the adoption of improved sweetpotato varieties.},
  keywords    = {Agricultural technology adoption, Sweetpotato, Improved varieties, Nudges, Nostalgia}
}

